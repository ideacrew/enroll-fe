{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              { "sourceTag": "*", "onlyDependOnLibsWithTags": ["*"] },
              {
                "sourceTag": "client:dchbx",
                "onlyDependOnLibsWithTags": ["client:dchbx", "scope:shared"]
              },
              {
                "sourceTag": "scope:faa",
                "onlyDependOnLibsWithTags": [
                  "scope:faa",
                  "scope:shared",
                  "type:util",
                  "type:util-store",
                  "type:store"
                ]
              },
              {
                "sourceTag": "scope:health-connector",
                "onlyDependOnLibsWithTags": [
                  "scope:health-connector",
                  "scope:shared"
                ]
              },
              {
                "sourceTag": "client:coverme",
                "onlyDependOnLibsWithTags": ["client:coverme", "scope:shared"]
              },
              {
                "sourceTag": "type:app",
                "onlyDependOnLibsWithTags": ["type:feature", "type:util"]
              },
              {
                "sourceTag": "type:store",
                "onlyDependOnLibsWithTags": ["*"]
              },
              {
                "sourceTag": "type:testing",
                "onlyDependOnLibsWithTags": [
                  "type:util",
                  "type:data-access",
                  "type:models"
                ]
              },
              {
                "sourceTag": "type:i18n",
                "onlyDependOnLibsWithTags": ["type:util"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts"],
      "plugins": ["unicorn"],
      "extends": ["plugin:@nrwl/nx/typescript", "plugin:unicorn/recommended"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    }
  ]
}
